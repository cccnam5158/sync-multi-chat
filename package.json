    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "electron-store": "^8.1.0",
    "puppeteer-core": "^24.31.0"
  },
  "build": {
    "appId": "com.multiaichat.app",
    "productName": "Multi-AI Chat",
