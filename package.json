{
  "name": "sync-multi-chat",
  "version": "0.5.6",
  "description": "",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "generate:icons": "node scripts/generate-icons.js",
    "build": "node scripts/generate-icons.js && electron-builder",
    "build:portable": "node scripts/generate-icons.js && electron-packager . \"Sync Multi Chat\" --platform=win32 --arch=x64 --out=dist-packager --overwrite --icon=build/icon.ico",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "electron-rebuild"
  },
  "keywords": [],
  "author": "Joseph Nam",
  "license": "SEE LICENSE IN LICENSE",
  "type": "commonjs",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "sharp": "^0.34.4",
    "to-ico": "^1.1.5"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "chrome-launcher": "^1.2.1",
    "electron-log": "^5.0.0",
    "electron-store": "^8.1.0",
    "idb": "^8.0.3",
    "puppeteer-core": "^24.31.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "robotjs": "^0.6.0",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "build": {
    "appId": "com.syncmultichat.app",
    "productName": "Sync Multi Chat",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "src/**/*",
      "package.json"
    ]
  }
}